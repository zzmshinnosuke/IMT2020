                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="10*"/>
                        </Grid.RowDefinitions>

                        <Label Content="城市经度(度)：" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,3" HorizontalAlignment="Right"></Label>
